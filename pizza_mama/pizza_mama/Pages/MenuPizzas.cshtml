@page
@model pizza_mama.Pages.MenuPizzasModel
@{
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <link rel="stylesheet" href="~/css/style.css" />
        <title>Menu des pizzas</title>
    </head>
    <body>
	    <a asp-page="index">
            <img class="logo" src="~/images/small_logo.png" ></img>
	    </a>
        <div class="blockMenuTitle">
            <h1 class="titleMenu">Les Pizzas</h1>
        </div>
        <div class="menu_list">
        @foreach(var pizza in Model.Pizza)
        {
            <div class="menu_list_item">
                <span class="menu_list_item">@pizza.name</span>
                <span class="menu_list_price">@String.Format("{0:0.00}", pizza.price) €</span>
                <span class="menu_list_ingredient">@pizza.ingredient</span>
                @if(pizza.vegetarian)
                {
                    <span class="menu_list_veggie">VÉGÉTARIENNE</span>
                }
            </div>        
        }
        </div>
    </body>
</html>

